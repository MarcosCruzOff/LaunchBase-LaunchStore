<!--CATEGORIAS-->
<div class="item">
  <div>Categoria</div>
  <div>
    <select name="category_id">
      {% for category in categories %}
          <option value="{{category.id}}" 
            {% if products.category_id == category.id %}
              selected
            {%endif%}>
              {{category.name}}
          </option>
      {% endfor %} 
    </select>
  </div>
</div>

<!--NOME-->
<div class="item">
  <div>Título</div>
  <div>
      <input 
         type="text" 
         name="name" 
         placeholder="Digite o título do Anúncio"
         value="{{ product.name }}">
  </div>
</div>

<!--DESCRIÇÃO-->
<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description">
        {{product.description}}
        </textarea>
    </div>
</div>

<!--FOTO-->
<div class="item">
    <div>Foto</div>
    <div>
        <div id="photos-upload">
            <input 
                type="file" 
                name="photos" 
                id="photos-input" 
                multiple accpet="image/*"
                onchange="PhotosUpload.handleFileInput(event)">
            <p>Selecione Até 6 fotos</p>
        </div>
        <div id="photos-previews">
          {% if files %}
            {% for image in files %}
              <div class="photo" id="{{image.id}}">
                <img src="{{image.src}}" alt="{{image.name}}">
                <i class="material-icons" 
                   onclick="PhotosUpload.removeOldPhoto(event)">close</i>
              </div>
            {% endfor %}
            <input type="hidden" name="removed_files">
          {% endif %}
        </div>
    </div>
</div>

<!--PREÇO-->
<div class="item">
    <div>Valor</div>
    <div>
        <input 
            type="text" 
            name="price" 
            placeholder="Valor do produto"
            value="{{ product.price }}"
            onkeydown="Mask.apply(this, 'formatBRL')">
    </div>
    {% if product.old_price %}
        <input type="hidden" name="old_price" value="{{product.old_price}}">
    {% endif %}
</div>

<!--QUANTIDADE-->
<div class="item">
    <div>quantidade</div>
    <div>
        <input 
            type="number" 
            name="quantity" 
            placeholder="Digite o nome do Anúncio"
            value="{{ product.quantity }}">
    </div>
</div>

<!--DISPONIVEL-->
{% if (product.status == '1') or (product.status == 0) %}
   <div class="item">
      <div>Disponivel?</div>
      <div>
         <span> 
            <input type="radio" name="status" value="1" 
            {% if product.status == "1" %}
              checked
            {% endif %}>
            Sim
         </span>

         <span> 
            <input type="radio" name="status" value="0"
            {% if product.status == '0' %}
              checked
            {% endif %}> 
            Não
         </span>
      </div>  
   </div>   
{% endif %}

