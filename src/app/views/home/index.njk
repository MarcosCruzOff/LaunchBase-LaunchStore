{% extends "layout.njk" %}
{% block content %}
    <section class="container shop">
        <h2>Ãšltimos produtos</h2>

        <div class="items">
            {% for product in products %}
                <div class="product">
                    <div class="image">
                       <img src="{{product.img}}" alt="{{product.name}}">
                    </div>

                    {% if product.oldPrice != product.price %}
                        <div class="old-price"> {{product.oldPrice}}</div>
                    {% endif %}

                    <p>{{product.price}}</p>
                    <h4>{{product.name}}</h4>
                    <a class="button" href="/products/{{product.id}}">
                        Ver Produto
                    </a>

                </div>
            {% endfor %}
        </div>
    </section>
    {# <script src="/js/script.js"></script>     #}
{% endblock content %}